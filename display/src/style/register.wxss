.container {
  padding-left: 6.3%;
  padding-right: 6.25%;
  padding-top: 3.25rem;
  color: #3E4955;
}
.title {
  font-size: 1.125rem;
  font-weight: bold;
  margin-bottom: 1.125rem;
}
.userInfo {
  height: 7rem;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 1.5rem;
  font-weight: bold;
  background: #ffffff;
  border-radius: 10px;
  margin-bottom: 1.9375rem;
}
.userInfo div {
  margin-left: 8.625rem;
}
.userInfo span {
  font-size: 1.875rem;
  margin-left: 2.3125rem;
}
.content {
  height: 27.4375rem;
  width: 100%;
  display: flex;
}
.left {
  width: 50%;
  padding: 1.875rem 1.6875rem 11.5rem 1.9375rem;
  background: #F7F7F7;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  font-size: 1.125rem;
}
.left .acitve-title {
  font-weight: bold;
}
.left .left-left {
  width: 70%;
}
.left .left-right {
  width: 30%;
  text-align: center;
  padding-top: 1.5rem;
  font-size: 1.25rem;
  font-weight: bold;
}
.left .left-right input {
  margin-top: 2.25rem;
}
 /deep/ .ivu-checkbox-inner {
  width: 2rem;
  height: 2rem;
  border-radius: 5px;
}
 /deep/ .ivu-checkbox-checked .ivu-checkbox-inner {
  background: #00D0D2;
  border-color: #00D0D2;
}
 /deep/ .ivu-checkbox-checked .ivu-checkbox-inner:after {
  top: .25rem;
  left: .75rem;
  width: .5rem;
  height: 1rem;
}
.left-box {
  margin-top: 1.0625rem;
  display: flex;
  border: 1px dashed #a0d8ff;
  background: #ffffff;
  height: 11.875rem;
  padding-left: 1.5rem;
  padding-top: 1.1875rem;
}
.left-box div span {
  font-weight: bold;
}
.right {
  width: 50%;
  padding: 1.875rem 1.625rem 11.5rem 1.9375rem;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  background: #F7F7F7;
  font-size: 1.125rem;
}
.right .acitve-title {
  font-weight: bold;
}
.right .right-left {
  width: 70%;
}
.right .right-right {
  width: 30%;
  text-align: center;
  padding-top: 1.5rem;
  font-size: 1.25rem;
  font-weight: bold;
}
.right .right-right input {
  margin-top: 2.25rem;
}
.right-box {
  margin-top: 1.0625rem;
  display: flex;
  border: 1px dashed #a0d8ff;
  background: #ffffff;
  height: 11.875rem;
  padding-left: 1.5rem;
  padding-top: 1.1875rem;
}
.right-box div span {
  font-weight: bold;
}
.activebg {
  background: #ffffff;
}
.activebg .acitve-title {
  color: #FF9000;
}
.activebg .left-box {
  background: #e6ffff;
}
.box-top {
  display: flex;
  flex-flow: row wrap;
}
.box-top div {
  width: 50%;
  margin-bottom: 1rem;
}
.btn-box {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 8.625rem;
  font-weight: bold;
  margin-top: 0.625rem;
  background: #ffffff;
  border-radius: 10px;
  padding-top: 2.25rem;
}
.btn-box div {
  height: 4rem;
  line-height: 4rem;
  font-size: 1.5rem;
}
.btn-box .cancel {
  background: url('/static/img/cancel.png') no-repeat center;
  color: #5647FF;
  width: 11.6875rem;
  text-align: center;
}
.btn-box .confirm {
  background: url('/static/img/confirm.png') no-repeat center;
  width: 16rem;
  color: #ffffff;
  padding-left: 5rem;
  margin-left: 1.75rem;
}
.mb {
  margin-bottom: 1rem;
}
.box-title {
  color: #3B81F4;
  font-weight: bold;
}
.yellow {
  color: #F4B92C;
}
