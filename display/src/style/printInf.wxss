  width: 74.9375rem;
  height: 10.5rem;
  margin: 0 auto;
  margin-top: 5.5625rem;
  position: relative;
}
.personInf p {
  width: 100%;
  height: 1.125rem;
  font-size: 1.125rem;
  line-height: 1.125rem;
  font-weight: bold;
}
.personInf div {
  width: 100%;
  height: 4.5rem;
}
.infTitle {
  font-size: 1.5rem;
