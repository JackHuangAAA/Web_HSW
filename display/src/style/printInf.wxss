  font-size: 1.125rem;
}
.detail {
  position: absolute;
  width: 140%;
  left: -13rem;
  bottom: 0;
}
.btn-box {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 8.625rem;
  font-weight: bold;
  margin-top: 11.6875rem;
  background: white;
  border-radius: 10px;
  padding-top: 2.25rem;
}
.btn-box div {
  height: 4rem;
  line-height: 4rem;
  font-size: 1.5rem;
}
.btn-box .cancel {
  background: url('/static/img/cancel.png') no-repeat center;
  color: purple;
  width: 11.6875rem;
  text-align: center;
}
.btn-box .confirm {
  background: url('/static/img/confirm.png') no-repeat center;
  width: 16rem;
  color: white;
  padding-left: 5rem;
  margin-left: 1.75rem;
}
.confirmTip {
  width: 19rem;
  height: 1rem;
